@model habitos_app.Web.Models.MedicationDto

@{
    ViewData["Title"] = "Edit Medication";
}

<h1>Editar Medicamento</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitId">Unidad</label>
        <select asp-for="UnitId" asp-items="ViewBag.Units" class="form-control">
            <option value="">-- Seleccionar Unidad --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ViaAdminId">Via Administracion</label>
        <select asp-for="ViaAdminId" asp-items="ViewBag.ViaAdmins" class="form-control">
            <option value="">Seleccionar vía de administración</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Cantidad</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
