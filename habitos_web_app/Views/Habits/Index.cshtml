
@{
    ViewData["Title"] = "Index";
}

<h1>Habits Index</h1>

<div class="row">
    <div class="table">
        <table class="table-responsive">
            <thead>
				<tr>
					<th>Id</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var habit in Model)
				{
					<tr>
						<td>@habit.Id</td>
						<td>@habit.Description</td>
						<td>
							<a href="@Url.Action("Edit", "Habits", new { id = habit.Id })">Edit</a> |
							<a href="@Url.Action("Details", "Habits", new { id = habit.Id })">Details</a> |
							<a href="@Url.Action("Delete", "Habits", new { id = habit.Id })">Delete</a>
						</td>
					</tr>
				}
			</tbody>
        </table>
    </div>
</div>