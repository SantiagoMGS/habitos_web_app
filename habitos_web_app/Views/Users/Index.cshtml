@{
    ViewData["Title"] = "Index";
}

<h1>Users Index</h1>

<!-- Botón para crear un nuevo usuario -->
<div class="mb-3">
    <a href="@Url.Action("Create", "Users")" class="btn btn-success">Create New User</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.UserType.Description</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                            <form asp-action="Delete" asp-route-id="@user.Id" style="display:contents">
								<button type="submit" class="btn btn-danger btnDelete">Eliminar</button
                            </form>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
