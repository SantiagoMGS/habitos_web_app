@{
    ViewData["Title"] = "Index";
}

<h1>Users Index</h1>

<!-- Botón para crear un nuevo usuario -->
<div class="mb-3">
    <a href="@Url.Action("Create", "Users")" class="btn btn-success">Create New User</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-responsive-md">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.UserType.Description</td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                            <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-secondary btn-sm">Details</a>
                            <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
